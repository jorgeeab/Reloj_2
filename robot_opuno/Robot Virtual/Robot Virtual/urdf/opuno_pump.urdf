<?xml version="1.0"?>
<robot name="opuno_pump" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual name="floor">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.01"/>
      </geometry>
      <material name="gray">
        <color rgba="0.15 0.16 0.2 1"/>
      </material>
    </visual>
    <visual name="tank_shell">
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <geometry>
        <box size="0.12 0.12 0.24"/>
      </geometry>
      <material name="shell">
        <color rgba="0.2 0.6 0.9 0.2"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.01"/>
      </geometry>
    </collision>
  </link>

  <link name="fluid">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
      <geometry>
        <box size="0.11 0.11 0.24"/>
      </geometry>
      <material name="water">
        <color rgba="0.1 0.8 0.9 0.8"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
      <geometry>
        <box size="0.11 0.11 0.24"/>
      </geometry>
    </collision>
  </link>

  <joint name="fluid_slide" type="prismatic">
    <parent link="base"/>
    <child link="fluid"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.25" effort="5" velocity="0.5"/>
    <dynamics damping="0.1" friction="0"/>
  </joint>
</robot>
